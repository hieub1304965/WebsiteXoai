<!DOCTYPE html>
<html>
  <head>
    <!-- Chen tap tin head.ejs -->
    <% include ../../partials/header.ejs %>
    <!-- Ajax Jquery -->
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.1.1/jquery.min.js"></script>
    <!-- jQuery 2.2.3 -->
    <script src="/plugins/jQuery/jquery-3.2.1.min.js"></script>
  </head>
  <body class="hold-transition skin-blue sidebar-mini">
    <div class="wrapper">
		<!-- Chen tap tin nav.ejs -->
		<% include ../../partials/nav.ejs %>
		<!-- Content Wrapper. Contains page content -->
		<div class="content-wrapper">
        <section class="content-header">
          <h1>
            Cập nhật đất trồng
          </h1>
          <ol class="breadcrumb">
            <li><a href="/quantrac/nongdan"><i class="fa fa-dashboard"></i> Nông dân</a></li>
            <li><a href="/quantrac/nongdan/dattrong/danhsach"> Quản lý đất trồng</a></li>
            <li class="active">Cập nhật đất trồng</li>
          </ol>
        </section>
        <!-- Content body -->
        <section class="content">
          	<div class="row">
        		<div class="col-md-12">
              		<div class="box box-primary">
                		<div class="box-header with-border text-center">
                  			<h3 class="box-titile"><b>Cập nhật đất trồng</b></h3>
                		</div>
                		<div class="box-body">
							<form class="form-horizontal" name="createfarmyardFrm" id="createfarmyardFrm" method="post" action="/quantrac/nongdan/dattrong/themdattrong">
								<div class="form-group">
									<label class="control-label col-lg-4 col-md-4 col-sm-4" for="soiltype_id">Tên loại đất</label>
									<div class="col-lg-8 col-md-8 col-sm-8">
										<div class="row">
											<div class="col-md-6 col-xs-12">
												<div class="input-group">
													<select data-none-result-text="Không tìm thấy từ khoá tìm kiếm" data-live-search="true" id="soiltype_id" name="soiltype_id" class="form-control selectpicker">
														<option value="0">Chọn loại đất</option>
													</select>
													<span style="color:red; font-weight:bold;" class="input-group-addon">(*)</span>
												</div>
												<span id="species_id">
														<label id="soiltype_id-error" class="help-block" for="soiltype_id">Bạn chưa chọn loại đất</label>
												</span>
											</div>
										</div>
									</div>
								</div>
								<div class="form-group">
									<label class="control-label col-lg-4 col-md-4 col-sm-4" for="farmyard_province">Tỉnh:</label>
									<div class="col-lg-8 col-md-8 col-sm-8">
										<div class="row">
											<div class="col-md-6 col-xs-12">
												<div class="input-group">
													<select class="form-control" data-none-result-text="Không tìm thấy từ khoá tìm kiếm" data-live-search="true" name="province_id" id="province_id">
														<option value="">Chọn tỉnh/thành phố</option>
														<option value=""></option>
														<option value=""></option>
													</select>
													<span style="color:red; font-weight:bold;" class="input-group-addon">(*)</span>
												</div>
												<span id="errorprovince_id">
													<label for="province_id-error" class="help-block" for="province_id">Bạn chưa chọn tỉnh</label>
												</span>
											</div>
										</div>
									</div>
								</div>
								<div class="form-group">
									<label class="control-label col-lg-4 col-md-4 col-sm-4" for="district_id">Huyện:</label>
									<div class="col-lg-8 col-md-8 col-sm-8">
										<div class="row">
											<div class="col-md-6 col-xs-12">
												<div class="input-group">
													<select class="form-control" data-none-result-text="Không tìm thấy từ khoá tìm kiếm" data-live-search="true" name="district_id" id="district_id">
															<option value="">Chọn huyện</option>
															<option value=""></option>
															<option value=""></option>
													</select>
													<span style="color:red; font-weight:bold;" class="input-group-addon">(*)</span>
												</div>
												<span id="errordistrict_id">
													<label for="district_id-error" class="help-block" for="district_id">Bạn chưa chọn huyện</label>
												</span>
											</div>
										</div>
									</div>
								</div>
								<div class="form-group">
									<label class="control-label col-lg-4 col-md-4 col-sm-4" for="commune_id">Xã:</label>
									<div class="col-lg-8 col-md-8 col-sm-8">
										<div class="row">
											<div class="col-md-6 col-xs-12">
												<div class="input-group">
													<select class="form-control" data-none-result-text="Không tìm thấy từ khoá tìm kiếm" data-live-search="true" name="commune_id" id="commune_id">
															<option value="">Chọn xã</option>
															<option value=""></option>
															<option value=""></option>
													</select>
													<span style="color:red; font-weight:bold;" class="input-group-addon">(*)</span>
												</div>
												<span id="errorcommune_id">
													<label for="commune_id-error" class="help-block" for="commune_id">Bạn chưa chọn xã</label>
												</span>
											</div>
										</div>
									</div>
								</div>
								<div class="form-group">
									<label class="control-label col-lg-4 col-md-4 col-sm-4" for="farmyard_width">Chiều dài</label>
									<div class="col-lg-8 col-md-8 col-sm-8">
										<div class="row">
											<div class="col-md-6 col-xs-12">
												<div class="input-group">
													<input type="text" class="form-control" name="farmyard_width" id="farmyard_width_id" placeholder="Nhập vào chiều dài">
													<span style="color:red; font-weight:bold;" class="input-group-addon">(*)</span>
												</div>
												<span id="errorfarmyadwith_id">
														<label for="farmyard_width_id-error" class="help-block" for="farmyard_width_id">Bạn chưa nhập chiều dài</label>
												</span>
											</div>
										</div>
									</div>
								</div>
								<div class="form-group">
									<label class="control-label col-lg-4 col-md-4 col-sm-4" for="farmyard_height_id" >Chiều rộng</label>
									<div class="col-lg-8 col-md-8 col-sm-8">
										<div class="row">
											<div class="col-md-6 col-xs-12">
												<div class="input-group">
													<input type="text" class="form-control" name="farmyard_height_id" id="farmyard_height_id" placeholder="Nhập vào chiều rộng">
													<span style="color:red; font-weight:bold;" class="input-group-addon">(*)</span>
												</div>
												<span id="errorfarmyadheight_id">
													<label for="farmyard_height_id-error" class="help-block" for="farmyard_height_id">Bạn chưa nhập chiều rộng </label>
												</span>
											</div>
										</div>
									</div>
								</div>
								<div class="form-group">
									<label class="control-label col-lg-4 col-md-4 col-sm-4" for="croping_id" >Mùa vụ</label>
									<div class="col-lg-8 col-md-8 col-sm-8">
										<div class="row">
											<div class="col-md-6 col-xs-12">
												<div class="input-group">
													<input type="text" class="form-control" name="croping_id" id="croping_id" placeholder="Nhập vào mùa vụ">
													<span style="color:red; font-weight:bold;" class="input-group-addon">(*)</span>
												</div>
												<span id="errorcroping_id">
													<label for="croping_id-error" class="help-block" for="croping_id">Bạn chưa nhập mùa vụ</label>
												</span>
											</div>
										</div>
									</div>
								</div>
								<div class="form-group">
										<label class="control-label col-lg-4 col-md-4 col-sm-4" for="plants_id" >Tên cây trồng</label>
										<div class="col-lg-8 col-md-8 col-sm-8">
											<div class="row">
												<div class="col-md-6 col-xs-12">
													<div class="input-group">
														<input type="text" class="form-control" name="plants_id" id="plants_id" placeholder="Nhập vào tên cây trồng">
														<span style="color:red; font-weight:bold;" class="input-group-addon">(*)</span>
													</div>
													<span id="errorplants_id">
														<label for="plants_id-error" class="help-block" for="plants_id">Bạn chưa nhập tên cây trồng</label>
													</span>
												</div>
											</div>
										</div>
									</div>
									<div class="form-group">
										<label class="control-label col-lg-4 col-md-4 col-sm-4" for="farmyard_status">Trạng thái:</label>
										<div class="col-lg-8 col-md-8 col-sm-8">
											<div class="row">
												<div class="col-md-6 col-xs-12">
													<div class="input-group">
														<input type="text" class="form-control" name="farmyard_status" id="farmyard_status" placeholder="Nhập trạng thái">
														<span style="color:red; font-weight:bold;" class="input-group-addon">(*)</span>
													</div>
													<span id="errorfarmyard_status">
														<label for="plants_id-error" class="help-block" for="plants_id">Bạn chưa nhập trạng thái</label>
													</span>    
												</div>
											</div>
										</div>
									</div>
									<div class="form-group">
										<div class="col-lg-offset-4 col-lg-8 col-md-offset-4 col-md-8 col-sm-offset-4 col-sm-8">
											<button type="submit" class="btn btn-primary" title="Cập nhật đất trồng">Cập nhật đất trồng</button>&nbsp;
											<a href="/quantrac/nongdan/dattrong/danhsach">
												<button type="button" class="btn btn-primary" title="Huỷ bỏ thêm đất trồng">Huỷ bỏ</button>
											</a>
											<span style="color:red; font-weight:bold;">&nbsp;(*)</span> là bắt buộc
										</div>
									</div>
								</form>
							</div>
						</div>
					</div>
				</div>
        	</section>
		</div>
		<!-- Chen tap tin script.ejs -->
		<% include ../../partials/script.ejs %>
		<!-- Chen tap tin sidebar.ejs -->
		<%include ../../partials/sidebar.ejs %>
		</div>
  	</body>
</html>