        </section>
        <!-- Content body -->
        <section class="content">
          	<div class="row">
        		<div class="col-md-12">
              		<div class="box box-primary">
                		<div class="box-header with-border text-center">
                  			<h3 class="box-titile"><b>Thêm bệnh gây hại</b></h3>
                		</div>
                		<div class="box-body">
							<form class="form-horizontal" name="thembenhFrm" id="thembenhFrm" method="post" action="/quantrac/nongdan/chamsoc/thembenhgayhai">
								<div class="form-group">
									<label class="control-label col-lg-4 col-md-4 col-sm-4" for="benh_id">Tên loại bệnh:</label>
									<div class="col-lg-8 col-md-8 col-sm-8">
										<div class="row">
											<div class="col-md-6 col-xs-12">
												<div class="input-group">
													<input type="text" class="form-control" name="" id="">
													<span style="color:red; font-weight:bold;" class="input-group-addon">(*)</span>
												</div>
												<span id="benh_id">
													<label id="benh_id-error" class="help-block" for="benh_id">Bạn chưa nhập loại bệnh</label>
												</span>
											</div>
										</div>
									</div>
								</div>
								<div class="form-group">
									<label class="control-label col-lg-4 col-md-4 col-sm-4" for="level_id">Mức độ gây hại:</label>
									<div class="col-lg-8 col-md-8 col-sm-8">
										<div class="row">
											<div class="col-md-6 col-xs-12">
												<div class="input-group">
                                                    <select class="form-control" data-none-result-text="Không tìm thấy từ khoá tìm kiếm" data-live-search="true" name="level_id" id="level_id">
                                                        <option value="">Chọn mức độ</option>
                                                        <option value="">Nhẹ</option>
                                                        <option value="">Nặng</option>
                                                    </select>
													<span style="color:red; font-weight:bold;" class="input-group-addon">(*)</span>
												</div>
												<span id="errorlevel_id">
													<label for="level_id-error" class="help-block" for="level_id">Bạn chưa chọn mức độ gây hại</label>
												</span>
											</div>
										</div>
									</div>
								</div>
								<div class="form-group">
									<label class="control-label col-lg-4 col-md-4 col-sm-4" for="timeappears_id">Thời gian xuất hiện:</label>
									<div class="col-lg-8 col-md-8 col-sm-8">
										<div class="row">
											<div class="col-md-6 col-xs-12">
												<div class="input-group">
													<input type="text" class="form-control" name="" id="">
													<span style="color:red; font-weight:bold;" class="input-group-addon">(*)</span>
												</div>
												<span id="errortimeappears_id">
													<label for="timeappears_id-error" class="help-block" for="timeappears_id">Bạn chưa nhập thời gian xuất hiện</label>
												</span>
											</div>
										</div>
									</div>
								</div>
								<div class="form-group">
									<label class="control-label col-lg-4 col-md-4 col-sm-4" for="treatment_id">Phòng trị:</label>
									<div class="col-lg-8 col-md-8 col-sm-8">
										<div class="row">
											<div class="col-md-6 col-xs-12">
												<div class="input-group">
                                                    <input type="radio" name="treatment_id" id="treatment_id"> Có<br>
                                                    <input type="radio" name="treatment_id" id="treatment_id"> Không
												</div>
												<span id="errortreatment_id">
	
												</span>
											</div>
										</div>
									</div>
								</div>
								<div class="form-group">
									<label class="control-label col-lg-4 col-md-4 col-sm-4" for="effective_id">Hiệu quả:</label>
									<div class="col-lg-8 col-md-8 col-sm-8">
										<div class="row">
											<div class="col-md-6 col-xs-12">
												<div class="input-group">
                                                    <input type="radio" name="effective_id" id="">Có <br>
                                                    <input type="radio" name="effective_id" id="">Không
												</div>
												<span id="erroreffective_id">
													
												</span>
											</div>
										</div>
									</div>
								</div>
                                <div class="form-group">
                                    <div class="col-lg-offset-4 col-lg-8 col-md-offset-4 col-md-8 col-sm-offset-4 col-sm-8">
                                        <button type="submit" class="btn btn-primary" title="Thêm đất trồng">Thêm đất trồng</button>&nbsp;
                                        <a href="/quantrac/nongdan/chamsoc/benhgayhai">
                                            <button type="button" class="btn btn-primary" title="Huỷ bỏ thêm đất trồng">Huỷ bỏ</button>
                                        </a>
                                        <span style="color:red; font-weight:bold;">&nbsp;(*)</span> là bắt buộc
                                    </div>
                                </div>
                            </form>
							</div>
						</div>
					</div>
				</div>
        	</section>
		</div>
		<!-- Chen tap tin script.ejs -->
		<% include ../../partials/script.ejs %>
