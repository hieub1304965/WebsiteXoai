  <body class="hold-transition skin-blue sidebar-mini">
    <div class="wrapper">
		<!-- Chen tap tin nav.ejs -->
		<% include ../../partials/nav.ejs %>
		<!-- Content Wrapper. Contains page content -->
		<div class="content-wrapper">
        <section class="content-header">
          <h1>
            Kỹ thuật chăm sóc
